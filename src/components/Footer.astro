---
import Logo from "./Logo.astro";
import ContactItem from "./ContactItem.astro";

import Location from "@/components/icons/Location.astro";
import Phone from "@/components/icons/Phone.astro";
import Mail from "@/components/icons/Mail.astro";
import Facebook from "@/components/icons/Facebook.astro";
import X from "@/components/icons/X.astro";
import Instagram from "@/components/icons/Instagram.astro";
import SocialPill from "./SocialPill.astro";

const itemsCompany = [
  {
    title: "About Us",
    url: "#",
  },
  {
    title: "Jobs",
    url: "#",
  },
  {
    title: "Press",
    url: "#",
  },
  {
    title: "Blog",
    url: "#",
  },
];

const itemsPrivacy = [
  {
    title: "Contact Us",
    url: "#",
  },
  {
    title: "Terms",
    url: "#",
  },
  {
    title: "Privacy",
    url: "#",
  },
];
---

<footer class="mt-80 bg-primary-300">
  <div
    class="container pt-64 pb-12 md:pt-40 md:pb-20 grid md:grid-cols-[6fr,3fr] lg:grid-cols-[6fr,2fr,1fr] gap-8"
  >
    <section>
      <Logo class="w-44 mb-8" />
      <address class="md:grid md:grid-cols-2 md:gap-x-12">
        <ContactItem
          class="mb-3"
          text={`Lorem ipsum, dolor sit amet consectetur adipisicing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua.`}
        >
          <Location class="size-6 flex-none" />
        </ContactItem>

        <div class="flex flex-col gap-2">
          <ContactItem redirection="tel:+15431234567" text="+1-543-123-4567">
            <Phone class="size-6" />
          </ContactItem>

          <ContactItem
            redirection="mailto:example@fylo.com"
            text="example@fylo.com"
          >
            <Mail class="size-6" />
          </ContactItem>
        </div>
      </address>
    </section>

    <div
      class="flex flex-col gap-8 md:flex-row md:mt-20 lg:justify-self-center"
    >
      <section>
        <ul class="flex flex-col gap-3">
          {
            itemsCompany.map((item) => (
              <li>
                <a
                  class="hover:underline hover:underline-offset-4"
                  href={item.url}
                >
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </section>

      <section>
        <ul class="flex flex-col gap-3">
          {
            itemsPrivacy.map((item) => (
              <li>
                <a
                  class="hover:underline hover:underline-offset-4"
                  href={item.url}
                >
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </div>

    <div
      class="flex flex-1 justify-center items-center gap-4 md:col-[1/3] lg:col-auto lg:mr-0 lg:mt-20 lg:self-start"
    >
      <SocialPill href="facebook.com" label="Facebook">
        <Facebook class="6" />
      </SocialPill>

      <SocialPill href="instagram.com" label="Instagram">
        <Instagram class="6" />
      </SocialPill>

      <SocialPill href="twitter.com" label="Twitter">
        <X class="6" />
      </SocialPill>
    </div>
  </div>
</footer>
