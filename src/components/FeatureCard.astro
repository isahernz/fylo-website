---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<article class="flex flex-col gap-4 text-center">
  <img class="mx-auto size-[60px] object-contain" src={image} alt={title} />
  <div class="flex flex-col gap-2">
    <h2 class="font-raleway text-xl font-bold">{title}</h2>
    <p>
      {description}
    </p>
  </div>
</article>
