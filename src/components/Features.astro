---
import FeatureCard from "./FeatureCard.astro";
import { FEATURES } from '@/consts/features'
---

<section class="mx-auto mt-28 max-w-[900px]">
  <div class="container flex flex-col gap-12 md:grid md:grid-cols-2 md:gap-24">
    {
      FEATURES.map((feature) => (
        <FeatureCard
          title={feature.title}
          description={feature.description}
          image={feature.image}
        />
      ))
    }
  </div>
</section>
